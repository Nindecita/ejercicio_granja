<%= form_with(model: animal) do |form| %>
  <% if animal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>
      <ul>
        <% animal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <label for="farmers">Choose a farmers:</label>
    <select name="animal[farmer_id]" id="animal_farmer_id">
      <option value="-1" selected >Seleccione un farmer</option>
      <% @farmers.each do |farmer| %>
        <option value="<%= farmer.id %>"> <%= farmer.id %> - <%= farmer.name %> </option>
      <% end %>
    </select>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
